{
  "name": "react-lite-components",
  "sideEffects": false,
  "version": "0.1.1",
  "description": "A React UI library focused on minimum bundle size, simplicity, consistency and responsive design.",
  "main": "/lib/index.js",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.js --mode development",
    "prebuild": "rm -rf lib",
    "build": "cross-env NODE_ENV=production webpack -p --config webpack.config.js",
    "eslint": "./node_modules/.bin/eslint ./ --fix",
    "test": "nyc mocha --require @babel/register --require jsdom-global/register --require test/setup.js 'src/components/**/*.test.js'",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "keywords": [
    "react",
    "styled",
    "components",
    "light",
    "weight",
    "responsive",
    "ui",
    "library"
  ],
  "author": "rishichawda",
  "private": false,
  "license": "MIT",
  "repository": "https://github.com/rishichawda/react-lite-components",
  "bugs": {
    "url": "https://github.com/rishichawda/react-lite-components/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-module-resolver": "^3.1.2",
    "chai": "^4.2.0",
    "chai-enzyme": "^1.0.0-beta.1",
    "compression-webpack-plugin": "^2.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "eslint": "^5.5.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "glob": "^7.1.3",
    "jsdom": "^14.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^6.0.0",
    "node-sass": "^4.11.0",
    "nyc": "13.1.0",
    "react-hot-loader": "^4.11.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "url-loader": "^1.1.1",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7"
  },
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.7.0",
    "styled-components": "^4.1.3"
  },
  "nyc": {
    "check-coverage": false,
    "per-file": true,
    "statements": 75,
    "branches": 75,
    "functions": 75,
    "lines": 75,
    "include": [
      "src/components/**/*.js"
    ],
    "exclude": [
      "src/core/**/*.js",
      "src/*.js",
      "src/**/*.test.js"
    ]
  }
}
